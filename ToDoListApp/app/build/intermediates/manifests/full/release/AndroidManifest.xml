<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamnougat.todolistapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.teamnougat.todolistapp.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamnougat.todolistapp.CreateTaskActivity"
            android:icon="@drawable/ic_action_cross"
            android:label="Add Task"
            android:parentActivityName="com.teamnougat.todolistapp.MainActivity" />
        <activity
            android:name="com.teamnougat.todolistapp.ViewTaskActivity"
            android:icon="@drawable/ic_action_back"
            android:label="Task"
            android:parentActivityName="com.teamnougat.todolistapp.MainActivity" />
        <activity
            android:name="com.teamnougat.todolistapp.WeeklyViewActivity"
            android:icon="@drawable/ic_action_back"
            android:label="Weekly View"
            android:parentActivityName="com.teamnougat.todolistapp.MainActivity" />
        <activity
            android:name="com.teamnougat.todolistapp.EditTaskActivity"
            android:icon="@drawable/ic_action_back"
            android:label="Edit Task" />
        <activity
            android:name="com.teamnougat.todolistapp.HandWritingActivity"
            android:icon="@drawable/ic_action_back"
            android:label="Handwriting"
            android:parentActivityName="com.teamnougat.todolistapp.CreateTaskActivity" >
        </activity>
    </application>

</manifest>