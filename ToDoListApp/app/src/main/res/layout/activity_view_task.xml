<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:uncertainGestureColor="#00000000"
    android:gestureColor="#00000000"
    android:weightSum="1">

    <TextView
        android:text="Task Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_TaskName"
        android:layout_weight="0.10"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Due Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_DueDate"
        android:layout_weight="0.10"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txv_TaskType"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Task Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_TaskType"
        android:layout_weight="0.10"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txv_TaskName"
        android:layout_alignParentStart="true" />

    <Button
        android:text="DONE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_Done"
        android:layout_weight="0.10"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Due Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_DueTime"
        android:layout_weight="0.10"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/txv_DueDate"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txv_Location"
        android:layout_weight="0.10"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/txv_DueTime"
        android:layout_alignParentStart="true" />
</RelativeLayout>
